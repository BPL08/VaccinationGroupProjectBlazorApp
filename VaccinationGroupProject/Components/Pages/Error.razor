@page "/Error"
@inject NavigationManager Navigation

<PageTitle>Not Authorized</PageTitle>

<div class="container mt-5 text-center">
    <h1 class="text-danger mb-4">Unauthorized Access</h1>
    <p class="lead mb-4">You are not authorized to view this page.</p>
    <button class="btn btn-primary" @onclick="RedirectToLogin">Go to Login</button>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

@code {
    private void RedirectToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}