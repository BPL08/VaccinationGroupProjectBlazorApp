@inject NavigationManager Navigation
@inject ISessionStorageService SessionStorage

<nav class="col-md-3 col-lg-2 bg-light p-3" style="min-height: 100vh;">
    <div class="sidebar-sticky">
        <h4 class="mb-3">Staff Portal</h4>
        <ul class="nav flex-column">
           
          
            <li class="nav-item">
                <button class="nav-link btn btn-outline-primary w-100 mb-2" @onclick="@NavigateToVaccineManageBatch">
                    Manage Vaccine Batches
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-outline-primary w-100 mb-2" @onclick="@NavigateToVaccineManagePackages">
                    Manage Vaccine Packages
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-outline-primary w-100 mb-2" @onclick="@NavigateToManageSchedule">
                    Manage Schedules
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-outline-primary w-100 mb-2" @onclick="@NavigateToManageVacineHistory">
                    Manage History
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link btn btn-outline-secondary w-100 mb-2" @onclick="HandleLogout">
                    Logout
                </button>
            </li>
        </ul>
    </div>
</nav>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@code {
    private void NavigateToDashboard() => NavigateTo("dashboard");
    private void NavigateToProfile() => NavigateTo("profile");
    private void NavigateToTasks() => NavigateTo("tasks");
    private void NavigateToVaccineManageBatch() => NavigateTo("vaccinemanagebatch");
    private void NavigateToVaccineManagePackages() => NavigateTo("vaccinepackage");
    private void NavigateToManageSchedule() => NavigateTo("manageschedule");
    private void NavigateToManageVacineHistory() => NavigateTo("vaccinehistorymanage");
    private void NavigateTo(string page)
    {
        Navigation.NavigateTo($"/staff/{page}");
    }

    private async Task HandleLogout()
    {
        await SessionStorage.RemoveItemAsync("AccountId");
        Navigation.NavigateTo("/login");
    }
}